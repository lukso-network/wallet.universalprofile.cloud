{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "useImportType": "off",
        "useNodejsImportProtocol": "off"
      }
    }
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "none"
    }
  },
  "files": {
    "ignore": ["node_modules", "dist", ".output", "contracts", ".nuxt"]
  }
}
